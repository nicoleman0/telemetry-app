<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Telemetry Report</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    :root { --bg:#0f172a; --fg:#e2e8f0; --muted:#94a3b8; --accent:#38bdf8; --danger:#ef4444; --ok:#22c55e; }
    body { background: var(--bg); color: var(--fg); font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif; margin:0; }
    .container { max-width: 980px; margin: 0 auto; padding: 24px; }
    h1, h2 { margin: 0 0 12px; }
    h1 { font-size: 28px; }
    h2 { font-size: 20px; color: var(--accent); }
    .card { background: #0b1220; border: 1px solid #1f2a3f; border-radius: 10px; padding: 16px; margin-bottom: 16px; }
    .grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 12px; }
    .kv { display:flex; align-items:center; justify-content:space-between; padding:6px 10px; border-radius:8px; background:#0a101b; border:1px solid #1a2438; }
    .kv .label { color: var(--muted); }
    table { width:100%; border-collapse: collapse; }
    th, td { text-align:left; padding:8px 10px; border-bottom: 1px solid #1a2438; }
    th { color: var(--muted); font-weight:600; }
    .pill { display:inline-block; padding:2px 8px; border-radius:999px; font-size:12px; background:#0a101b; border:1px solid #1a2438; }
    .pill.danger { border-color: var(--danger); color: var(--danger); }
    .pill.ok { border-color: var(--ok); color: var(--ok); }
    .muted { color: var(--muted); }
    .footer { margin-top: 16px; color: var(--muted); font-size: 12px; }
  </style>
</head>
<body>
  <div class="container">
    <h1>Telemetry Report</h1>

    <div class="card">
      <h2>Baseline Summary</h2>
      <div class="grid">
        <div class="kv"><span class="label">Net established avg</span><strong>{{ '%.2f'|format(baseline.net_established_avg or 0) }}</strong></div>
        <div class="kv"><span class="label">Persistence count avg</span><strong>{{ '%.2f'|format(baseline.persistence_count_avg or 0) }}</strong></div>
        <div class="kv"><span class="label">Event types</span><strong>{{ baseline.event_type_counts|length }}</strong></div>
        <div class="kv"><span class="label">Top processes tracked</span><strong>{{ baseline.top_processes|length }}</strong></div>
      </div>
      <div style="margin-top:12px">
        <span class="muted">Event type counts:</span>
        {% for k, v in baseline.event_type_counts.items() %}
          <span class="pill">{{ k }}: {{ v }}</span>
        {% endfor %}
      </div>
      <div style="margin-top:8px">
        <span class="muted">Top processes:</span>
        {% for name, cnt in baseline.top_processes %}
          <span class="pill">{{ name }} ({{ cnt }})</span>
        {% endfor %}
      </div>
    </div>

    <div class="card">
      <h2>Anomalies</h2>
      <div class="kv"><span class="label">Count</span><strong>{{ anomalies|length }}</strong></div>
      {% if anomalies|length > 0 %}
      <table style="margin-top:12px">
        <thead>
          <tr>
            <th>Timestamp</th>
            <th>Type</th>
            <th>Process</th>
            <th>Risk</th>
            <th>Reasons</th>
          </tr>
        </thead>
        <tbody>
          {% for ev in anomalies %}
          <tr>
            <td>{{ ev.timestamp }}</td>
            <td><span class="pill">{{ ev.event.type }}</span></td>
            <td>{{ ev.process.name or '-' }}<br><span class="muted">{{ ev.process.path or '' }}</span></td>
            <td><span class="pill {{ 'danger' if (ev.risk.score or 0) >= 50 else 'ok' }}">{{ ev.risk.score or 0 }}</span></td>
            <td>{% for r in ev.risk.reasons %}<div>{{ r }}</div>{% endfor %}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
      {% else %}
        <p class="muted" style="margin-top:8px">No anomalies detected.</p>
      {% endif %}
    </div>

    <div class="card">
      <h2>Recent Events</h2>
      <table>
        <thead>
          <tr>
            <th>Timestamp</th>
            <th>Type</th>
            <th>Process</th>
            <th>Signed</th>
          </tr>
        </thead>
        <tbody>
          {% for ev in events[-20:] %}
          <tr>
            <td>{{ ev.timestamp }}</td>
            <td><span class="pill">{{ ev.event.type }}</span></td>
            <td>{{ ev.process.name or '-' }}</td>
            <td>{% if ev.process.signed is not none %}
                  <span class="pill {{ 'ok' if ev.process.signed else 'danger' }}">{{ 'yes' if ev.process.signed else 'no' }}</span>
                {% else %}
                  <span class="muted">n/a</span>
                {% endif %}
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    <div class="footer">Generated by Telemetry App</div>
  </div>
</body>
</html>
